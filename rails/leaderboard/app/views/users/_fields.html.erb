<%= render 'shared/error_messages' %>

<%= f.label :loginname, "Loginname" %>
<%= f.text_field :loginname, class: 'form-control' %>

<%= f.label :lastname, "Nachname" %>
<%= f.text_field :lastname, class: 'form-control' %>

<%= f.label :forename, "Vorname" %>
<%= f.text_field :forename, class: 'form-control' %>

<%= f.label :birthdate, "Geburtsdatum" %><br />
<%= date_select :user, :birthdate, order: [:day, :month, :year], use_month_numbers: true, use_two_digit_numbers: true, start_year: 1930, end_year: Date.today.year, with_css_classes: true %><br />

<%= f.label :email, "E-Mail" %>
<%= f.text_field :email, class: 'form-control' %>