<% provide(:title, "Game") %>

<iframe id="iframeId" class="game" scrolling="no" frameborder="0" src="https://yellow-cliff-03ee11003.azurestaticapps.net/" title="YB Jump'n'Run">
    Your browser doesn't support iframes
</iframe>

<%= image_tag("close.png", :class => "closeButton", :id => "closeButtonId", :onClick => "closeIFrame()") %>
<%= image_tag("play_button.png", :class => "playButton", :id => "playButtonId", :onClick => "playGame()") %>

<script>
    function closeIFrame(){
        document.getElementById("closeButtonId").style.visibility = "hidden";
        document.getElementById("playButtonId").style.visibility = "visible";
        $('#iframeId').remove();
    }
    function playGame(){
        location.reload();
    }
</script>
